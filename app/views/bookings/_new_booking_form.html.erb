<%= form_with model: @booking, local: true do |f| %>
    
    <% i = 1 %>

    <%= f.fields_for :passengers do |passengers_data| %>

    <%= "Passenger #{i} info" %>
    <%= f.label :name, "Name:" %>
    <%= passengers_data.text_field :name, placeholder: "Passengers name" %>
    <%= f.label :email, "Email:" %>
    <%= passengers_data.email_field :email, placeholder: "John@Doe.com" %>
    <br/>


    <% i= i + 1 %>


    <% end %>

    <%= f.hidden_field :flight_id, value: params[:flight] %>

    <%= f.submit "Purchase Ticket" %>


<% end %>