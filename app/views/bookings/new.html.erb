<% departing_airport = @selected_flight.departure_airport.code %>
<% arriving_airport = @selected_flight.arrival_airport.code %>
<% selected_date = @selected_flight.scheduled_on.strftime('%B %d, %Y') %>
<% scheduled_time = @selected_flight.scheduled_on.strftime('%H:%M') %>
<% arrival_time = (@selected_flight.scheduled_on + (@selected_flight.duration/60).to_i.hours).strftime('%H:%M') %>

<%= selected_date %>  <%= scheduled_time %> - <%= arrival_time %> Nonstop <%= (@selected_flight.duration/60) %> hours <%= departing_airport %> - <%= arriving_airport %>
<%= render "new_booking_form" %>